.fondo{
	width:100vw;
	height:100vh;
	position:absolute;
	background:linear-gradient(to right,#e5e5e5 75%,#dbdcde 25%);
	border-radius:15px;
}

/*CONTENEDOR PRINCIPAL*/

.contenedor{
	background:#FFF;
	 width: 80%;
	 height:550px;
	 /* position:relative;
	 top:54px;
	 left:26px; */
	 margin: 36px auto;
	 border-top-left-radius:48px;
     border-top-right-radius:48px;
	 border-bottom-left-radius:48px;
	 border-bottom-right-radius:48px;
	 /* border: 10px solid #efefef; */
	 border: 10px solid rgba(242, 244, 244,.5) ;
	 background-clip:padding-box;
	 box-sizing: content-box;
	 margin-bottom:25px;
}

/*FIN DEL CONTENEDOR PRINCIPAL*/

/*-----------------------*/

/*HEADER*/

.nav_p{
	position: relative;
    top: 0px;
    left: 0px;
    width: 100%;
	height:150px;
	display:flex;
	justify-content:flex-start;
	align-items:center;
	border-top-left-radius:48px;
	border-top-right-radius:48px;
	/* flex-wrap:wrap; */
}

.nav_p a{
	text-decoration:none;
	display:inline-block;
	width:100px;
	text-align:center;
	margin-left:15px;
}

.nav_p a:hover{
	color:#5d66ff;
}

.nav_p li{
	list-style:none;
	/* margin-left:78px; */
	font-family:sans-serif;
	font-weight:600;
	font-size:12px;
	color:#576d90;
	width:100px;
	text-align:center;
}

.nav_p .icon_p{
	margin-left:365px;
	font-size:32px;
}

.nav_p .logo:hover{
	color:#5d66ff;
}

.nav_p .logo{
	margin-left:81px;
}

.nav_p .about{
	margin-left:70px;
}

.nav_p .about:hover{
	color:#5d66ff;
}

.nav_p .contact{
	margin-left:70px;
}

.nav_p .contact:hover{
	color:#5d66ff;
}

/*FIN DEL HEADER*/

/*--------------*/

/*SECTION PRINCIPAL*/

.seccion_p{
	display:flex;
}

.enunciado_p{
	
	width:50%;
}

.enunciado_p a{
	text-decoration:none;
}

.enunciado_p h1{
	font-size:54px;
	color:#5d66ff;
	padding-left:73px;
	font-weight:400;
	font-family:sans;
	line-height:55px;
}

.enunciado_p p{
	font-size:11px;
	color:#c7c8c9;
	padding-left:76px;
	padding-right:0px;
	padding-top:26px;
	font-weight:600;
	font-family:sans;
}

.boton_p{
	background:#5d66ff;
	color:#FFF;
	font-size:14px;
	font-family:sans-2;
	/* font-weight:200; */
	border-style:none;
	padding:4px 25px;
	border-radius:25px;
	margin-top:30px;
	margin-left:80px;
}

.img_p{
	z-index:1000;
	justify-content:space-evenly;
}

.img_p img{
	width:420px;
	margin-right:42px;
	margin-top:35px;
}



footer p{
	font-size:13px;
	padding-left:77px;
	padding-top:15px;
	font-weight:600;
	color:#d2d3d5;
}









